<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page_tab3_gallery.ChoicePictureActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_choice_picture"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme_Red">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진 선택"
            android:fontFamily="@font/jalnanche"
            android:textColor="@color/main_001"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="저장"
            android:fontFamily="@font/jalnanche"
            android:textColor="@color/main_001"
            android:layout_gravity="right"
            android:clickable="true"
            android:onClick="clickSave"
            android:layout_marginRight="16dp"/>

    </com.google.android.material.appbar.MaterialToolbar>

    <ImageView
        android:id="@+id/iv_choice_img"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_below="@id/toolbar_choice_picture"
        android:src="@drawable/bg_image_search"
        android:clickable="true"
        android:onClick="clickChoicePicture"/>
</RelativeLayout>