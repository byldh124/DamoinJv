<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_profile_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/tv_chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이다형"
        android:layout_alignTop="@id/chat_profile_img"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/chat_profile_img"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_box_your"
        android:layout_toRightOf="@id/chat_profile_img"
        android:layout_below="@id/tv_chat_name"
        android:padding="8dp"
        android:layout_marginLeft="4dp"
        android:textColor="@color/black"
        android:maxEms="12"
        android:text="안녕하세요"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/tv_chat_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02/25 11:30"
        android:layout_alignBottom="@id/tv_chat_message"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tv_chat_message"
        android:textSize="12sp"/>

</RelativeLayout>