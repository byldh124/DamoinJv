<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="1dp"
    app:strokeColor="@color/pastel_6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_information_moim_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="유자바"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:textColor="#ff333333"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_information_moim_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="안녕하세요"
            android:layout_toRightOf="@id/tv_information_moim_dates"
            android:layout_alignBottom="@id/tv_information_moim_dates"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:textColor="#ff666666"/>

        <TextView
            android:id="@+id/tv_information_moim_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="안녕하세요"
            android:layout_below="@id/tv_information_moim_time"
            android:layout_alignLeft="@id/tv_information_moim_dates"
            android:layout_marginTop="4dp"
            android:textColor="#ff666666"/>

        <TextView
            android:id="@+id/tv_information_moim_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="안녕하세요"
            android:layout_below="@id/tv_information_moim_location"
            android:layout_alignLeft="@id/tv_information_moim_dates"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:textColor="#ff666666"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>