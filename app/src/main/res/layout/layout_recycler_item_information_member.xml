<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="1dp"
    app:strokeColor="@color/pastel_6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_information_member_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:id="@+id/tv_information_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_information_member_profile"
            android:text="유자바"
            android:layout_alignTop="@id/iv_information_member_profile"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:textColor="#ff333333"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_master"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모임장"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:textColor="@color/pastel_5"
            android:visibility="invisible"
            android:layout_alignTop="@id/tv_information_member_name"/>

        <TextView
            android:id="@+id/tv_information_member_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_information_member_name"
            android:layout_alignLeft="@id/tv_information_member_name"
            android:text="안녕하세요"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="16dp"
            android:textColor="#ff666666"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>